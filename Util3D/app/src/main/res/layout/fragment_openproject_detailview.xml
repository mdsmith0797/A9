<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/d_global_defaultHorizontalPadding"
    android:paddingEnd="@dimen/d_global_defaultVerticalPadding"
    android:paddingStart="@dimen/d_global_defaultVerticalPadding"
    android:paddingTop="@dimen/d_global_defaultHorizontalPadding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:gravity="left"
            android:id="@+id/fragment_openproject_detailname"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/fragment_openproject_detailutilities"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/icon_utility_water"
                android:id="@+id/fragment_openproject_detailutilities_water"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/icon_utility_gas"
                android:id="@+id/fragment_openproject_detailutilities_gas"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/icon_utility_electric"
                android:id="@+id/fragment_openproject_detailutilities_electric"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/icon_utility_sewage"
                android:id="@+id/fragment_openproject_detailutilities_sewage"
                android:orientation="horizontal"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/fragment_openproject_detailcreated" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_openproject_detailmodified" />


    </LinearLayout>

</LinearLayout>
